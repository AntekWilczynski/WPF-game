<Window x:Class="WPF_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1024">
    <Canvas Name="myCanvas" Focusable="True" KeyDown="Canvas_KeyDown" KeyUp="Canvas_KeyUp" Background="LightBlue">

        <Rectangle Name="background" Height="2145" Width="2180" Fill="Green" />

        <Rectangle Name="player" Height="150" Width="150" Fill="Black" Canvas.Top="400" Canvas.Left="400" />

        <Rectangle Name="monster" Height="150" Width="150" Fill="Aquamarine"  Canvas.Top="400" Canvas.Left="599" />

        <Label Name="scoreText" FontSize="22" FontWeight="Bold" Content="Score: 0" />

    </Canvas>
</Window>
